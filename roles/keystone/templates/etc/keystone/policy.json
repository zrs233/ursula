    "project_admin_create_user": "role:project_admin and (project_id:%(project_id)s or project_id:%(user.default_project_id)s)",
    "project_admin_update_user": "role:project_admin and (project_id:%(project_id)s or project_id:%(target.user.default_project_id)s)",
