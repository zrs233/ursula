    "identity:delete_region": "rule:admin_required",

    "identity:get_service": "rule:admin_or_cloudadmin_or_projectadmin",
    "identity:list_services": "rule:admin_or_cloudadmin_or_projectadmin",
    "identity:create_service": "rule:admin_required",
    "identity:update_service": "rule:admin_required",
    "identity:delete_service": "rule:admin_required",

    "identity:get_endpoint": "rule:admin_or_cloudadmin_or_projectadmin",
    "identity:list_endpoints": "rule:admin_or_cloudadmin_or_projectadmin",
