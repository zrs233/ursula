{% endif %}
    "service_role": "role:service",
    "service_or_admin": "rule:admin_required or rule:service_role",
    "owner" : "user_id:%(user_id)s",
    "admin_or_owner": "rule:admin_required or rule:owner",
    "support_role" : "role:support",
    "default": "rule:admin_required",
    "member_role": "role:_member_",

    "projectadmin_role": "role:project_admin",
    "cloud_admin_role": "role:cloud_admin",
    "admin_or_cloudadmin": "rule:admin_required or rule:cloud_admin_role",
    "admin_or_projectadmin": "rule:admin_required or rule:projectadmin_role",
